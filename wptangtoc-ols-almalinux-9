  tr "}" "\n" |
  grep '"release_support_type": "Long Term Support"' |
  grep '"release_status": "Stable"' |
  while read -r line; do
    echo "$line" | sed -E 's/.*"release_name": "([^"]+)".*/\1/'
  done)
clear
echo "Bạn hãy lựa chọn phiên bản Maria Database muốn sử dụng: "

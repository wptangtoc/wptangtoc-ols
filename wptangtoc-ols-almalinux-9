#openlitespeed yêu cầu phải có lsphp74 cấu hình khuyến nghị mới cho install
#dnf deplist openlitespeed gói phụ thuộc bắt buộc
goi_ls_php_bat_buoc=$(dnf deplist openlitespeed | grep -oP 'lsphp\K[0-9]+' | tail -n1) #như 74
if [[ -z $(dnf list available | grep "lsphp${goi_ls_php_bat_buoc}") ]]; then           #sử lý tình huống khi php hết hạn mà lại là thư viện bắt buộc của ols

  extension_php_bat_buoc=(
    common
    gd
    xml
    pdo
    process
    opcache
    mysqlnd
    mbstring
    imap
    zip
  )

  if [[ $(uname -m | grep 'aarch64') ]]; then #arm
    curl -skfL http://rpms.litespeedtech.com/centos/9/aarch64/RPMS >/tmp/php_extension_call_eol
  else
    curl -skfL http://rpms.litespeedtech.com/centos/9/update/x86_64/RPMS >/tmp/php_extension_call_eol
  fi

  if [[ ! -s /tmp/php_extension_call_eol ]]; then #sử lý tình huống khi rpms litespeed bị downtime không install được
    sed -i '/rpms.litespeedtech.com/d' /etc/hosts
    echo $'\n52.55.120.73 rpms.litespeedtech.com\n' >>/etc/hosts
    su_dung_repo_du_phong=1
    if [[ $(uname -m | grep 'aarch64') ]]; then #arm
      curl -skfL http://rpms.litespeedtech.com/centos/9/aarch64/RPMS >/tmp/php_extension_call_eol
    else
      curl -skfL http://rpms.litespeedtech.com/centos/9/update/x86_64/RPMS >/tmp/php_extension_call_eol
    fi
  fi

  url_repo_litespeed=$(
    cat /tmp/php_extension_call_eol | grep lsphp${goi_ls_php_bat_buoc} | grep -oP 'href="\K[^"]+' | grep -v 'debuginfo\|-devel\|-debugsource' | awk '
BEGIN { FS = "/" }
{
    filename = $NF
    split(filename, parts, "-")

    pkg_name = ""
    version = ""

    if (parts[2] == "pecl") {
        # TRƯỜNG HỢP 1: Gói PECL (ví dụ: lsphp74-pecl-redis-...)
        pkg_name = parts[1] "-" parts[2] "-" parts[3]
        version = parts[4]
    } else if (parts[2] ~ /^[0-9]+\.[0-9]+/) {
        # TRƯỜNG HỢP 2 (MỚI): Gói lsphp gốc (ví dụ: lsphp74-7.4.28-...)
        pkg_name = parts[1]
        version = parts[2]
    } else {
        # TRƯỜNG HỢP 3: Gói extension thông thường (ví dụ: lsphp74-pgsql-...)
        pkg_name = parts[1] "-" parts[2]
        version = parts[3]
    }

    # Logic so sánh phiên bản và lưu trữ vẫn như cũ
    if (version > versions[pkg_name]) {
        versions[pkg_name] = version
        latest_lines[pkg_name] = $0
    }
}
END {
    PROCINFO["sorted_in"] = "@ind_str_asc"
    for (pkg in latest_lines) {
        print latest_lines[pkg]
    }
}'
  )

  for extension_php_in in ${extension_php_bat_buoc[@]}; do
    if [[ $(printf "%s\n" "${url_repo_litespeed[@]}" | grep "lsphp${goi_ls_php_bat_buoc}-${extension_php_in}-") ]]; then #kiểm tra extension đó có tồn tại không
      dnf install http://rpms.litespeedtech.com$(printf "%s\n" "${url_repo_litespeed[@]}" | grep "lsphp${goi_ls_php_bat_buoc}-${extension_php_in}-") -y 2>/dev/null
      if [[ -z $(rpm -aq | grep -q "lsphp${goi_ls_php_bat_buoc}-${extension_php_in}-") ]]; then #kiểm tra đã cài được chưa, nếu chưa cài được thì sẽ return cài lại extension chỗ đó
        sleep 3
        dnf install http://rpms.litespeedtech.com$(printf "%s\n" "${url_repo_litespeed[@]}" | grep "lsphp${goi_ls_php_bat_buoc}-${extension_php_in}-") -y 2>/dev/null
      fi
    fi
  done
  url_php_eol_install=$(printf "%s\n" "${url_repo_litespeed[@]}" | grep -P 'lsphp'${goi_ls_php_bat_buoc}'-\K[0-9]+\.[0-9]+' | tail -n1) #lấy php main

  dnf install http://rpms.litespeedtech.com${url_php_eol_install} -y 2>/dev/null
  if [[ -z $(rpm -aq | grep -P 'lsphp'${goi_ls_php_bat_buoc}'-\K[0-9]+\.[0-9]+') ]]; then #kiểm tra đã cài được chưa, nếu chưa cài được thì sẽ return cài lại chỗ đó
    sleep 3
    dnf install http://rpms.litespeedtech.com${url_php_eol_install} -y 2>/dev/null
  fi

  rm -f /tmp/php_extension_call_eol
fi
dnf install openlitespeed -y --nogpgcheck

#kiểm tra openlitespeed đã được cài đặt chưa, fix lỗi nếu Repository của litespeed bị lỗi thì dùng Repository dự phòng
#nếu chưa cài đặt thì dùng Repository dự phòng ip khác thay vì dùng 208.167.239.232 ip dns gốc sẽ dùng 89.208.248.38 dự phòng của litespeed

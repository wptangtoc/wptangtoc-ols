echo "Bạn có muốn thay đổi Port SSH? để nâng cao bảo mật"
read -p "Nhập port SSH mới, bỏ qua nhấn (Enter): " port_ssh
while [[ "$port_ssh" ]] &&
  { [[ ! "$port_ssh" =~ ^[0-9]+$ ]] ||
    ((port_ssh < 1 || port_ssh > 65535 || port_ssh == 80 || port_ssh == 443)); }; do
  echo "Port không đúng định dạng, vui lòng nhập lại port từ 1 - 65535"

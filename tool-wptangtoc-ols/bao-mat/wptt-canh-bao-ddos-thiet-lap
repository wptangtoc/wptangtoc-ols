      a=0
      for select in ${selects[@]}; do
        a=$(expr $a + 1)
      done

      if [[ $a != 1 ]]; then
        selects+=("T·∫•t c·∫£ website")
      fi

      PS3="
-//- Nh·∫≠p l·ª±a ch·ªçn website c·ªßa b·∫°n [0=Tho√°t]: "
      select select in ${selects[@]}; do
        NAME=$select
        index=$REPLY
        break
      done
    else
      clear
      echo "Khong co domain tren he thong cua ban."
      exit
    fi
  }

  lua_chon_NAME
fi


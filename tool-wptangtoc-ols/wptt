function saoluu() {
  NAME=$1
  if [ "$NAME" = "${NAME/./}" ]; then
    clear
    . /etc/wptt/.wptt.conf
    echoDo "Domain ten mien nhap khong dung dinh dang."
    echo "vi du nhu: $Website_chinh"
    sleep 3
    . /etc/wptt/backup-restore/wptt-saoluu
    exit
  fi
  . /etc/wptt/backup-restore/wptt-saoluu $NAME
}


}

function renew-ssl-free() {
  _runing "Gia hạn SSl letsencrypt"
  /usr/bin/certbot renew --quiet
  /usr/local/lsws/bin/lswsctrl restart >/dev/null 2>&1
  _rundone "Gia hạn SSl letsencrypt"
}


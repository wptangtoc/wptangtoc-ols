if [[ $2 = 'premium' ]]; then
  unset key_activate
  . /etc/wptt/.wptt.conf
  if [[ -z $key_activate ]]; then
    echo "TÃ­nh nÄƒng nÃ y lÃ  tÃ­nh nÄƒng Premium báº¡n pháº£i mua Active key má»›i cÃ³ thá»ƒ sá»­ dá»¥ng Ä‘Æ°á»£c"
    echo "Báº¡n hÃ£y activate key thÃ¬ sáº½ Ä‘Æ°á»£c sá»­ dá»¥ng táº¥t cáº£ cÃ¡c tÃ­nh nÄƒng trong add ons"
    check_menu_wptangtoc_active=$1
    if [[ $check_menu_wptangtoc_active = "98" ]]; then
      . /etc/wptt/wptt-add-one-main 1
    fi
    exit
  fi

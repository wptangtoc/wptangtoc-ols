#yum clean all để search cho update cập nhật
if [[ $(which dnf 2>/dev/null) ]]; then
  dnf clean all >/dev/null 2>&1
else
  yum clean all >/dev/null 2>&1
fi

. /etc/wptt/echo-color

_runing "Tiến hành quét các phiên bản PHP"
selects=""
selects=()
x=''

(/etc/wptt/php/kho-luu-tru-litespeed) #subshell tránh đè biến

x=$(cat /tmp/php_extension_call_eol | grep -oP 'lsphp[0-9]+' | sort -u | grep -Eo '[0-9]{1,2}' | perl -pe 's/(\d{1})(?=(?:\d{1}){1,5}\b)/\1./g' | sed 's/^/PHP /g')

if [[ $(echo $x | grep -Eo '[0-9]{1,2}') = '' ]]; then
  sed -i '/rpms.litespeedtech.com/d' /etc/hosts
  echo $'\n52.55.120.73 rpms.litespeedtech.com\n' >>/etc/hosts
  # yum clean all >/dev/null 2>&1
  # x=''
  # if $(cat /etc/*release | grep -q "Ubuntu"); then
  #   x=$(yum search lsphp 2>/dev/null | grep 'lsphp' | cut -f1 -d '-' | cut -f1 -d '.' | awk '{ print $1}' | sort -u | sed '/:/d' | sed '/-/d' | sed '/==/d' | sed '/^&/d' | grep -Eo '[0-9]{1,2}' | perl -pe 's/(\d{1})(?=(?:\d{1}){1,5}\b)/\1./g' | sed 's/^/PHP /g')
  # else
  #   x=$(yum search lsphp --disablerepo="*" --enablerepo="litespeed,litespeed-update" 2>/dev/null | grep 'lsphp' | cut -f1 -d '-' | cut -f1 -d '.' | awk '{ print $1}' | sort -u | sed '/:/d' | sed '/-/d' | sed '/==/d' | sed '/^&/d' | grep -Eo '[0-9]{1,2}' | perl -pe 's/(\d{1})(?=(?:\d{1}){1,5}\b)/\1./g' | sed 's/^/PHP /g')
  # fi
  (/etc/wptt/php/kho-luu-tru-litespeed) #subshell tránh đè biến
  x=$(cat /tmp/php_extension_call_eol | grep -oP 'lsphp[0-9]+' | sort -u | grep -Eo '[0-9]{1,2}' | perl -pe 's/(\d{1})(?=(?:\d{1}){1,5}\b)/\1./g' | sed 's/^/PHP /g')
  su_dung_repo_du_phong=1
fi

# if $(cat /etc/*release | grep -q "Ubuntu"); then
#   x=$(yum search lsphp 2>/dev/null | grep 'lsphp' | cut -f1 -d '-' | cut -f1 -d '.' | awk '{ print $1}' | sort -u | sed '/:/d' | sed '/-/d' | sed '/==/d' | sed '/^&/d' | grep -Eo '[0-9]{1,2}' | perl -pe 's/(\d{1})(?=(?:\d{1}){1,5}\b)/\1./g' | sed 's/^/PHP /g')
# else
#   x=$(yum search lsphp --disablerepo="*" --enablerepo="litespeed,litespeed-update" 2>/dev/null | grep 'lsphp' | cut -f1 -d '-' | cut -f1 -d '.' | awk '{ print $1}' | sort -u | sed '/:/d' | sed '/-/d' | sed '/==/d' | sed '/^&/d' | grep -Eo '[0-9]{1,2}' | perl -pe 's/(\d{1})(?=(?:\d{1}){1,5}\b)/\1./g' | sed 's/^/PHP /g')
# fi

# if [[ $(echo $x | grep -Eo '[0-9]{1,2}') = '' ]]; then
#   sed -i '/rpms.litespeedtech.com/d' /etc/hosts
#   echo $'\n52.55.120.73 rpms.litespeedtech.com\n' >>/etc/hosts
#   yum clean all >/dev/null 2>&1
#   x=''
#   if $(cat /etc/*release | grep -q "Ubuntu"); then
#     x=$(yum search lsphp 2>/dev/null | grep 'lsphp' | cut -f1 -d '-' | cut -f1 -d '.' | awk '{ print $1}' | sort -u | sed '/:/d' | sed '/-/d' | sed '/==/d' | sed '/^&/d' | grep -Eo '[0-9]{1,2}' | perl -pe 's/(\d{1})(?=(?:\d{1}){1,5}\b)/\1./g' | sed 's/^/PHP /g')
#   else
#     x=$(yum search lsphp --disablerepo="*" --enablerepo="litespeed,litespeed-update" 2>/dev/null | grep 'lsphp' | cut -f1 -d '-' | cut -f1 -d '.' | awk '{ print $1}' | sort -u | sed '/:/d' | sed '/-/d' | sed '/==/d' | sed '/^&/d' | grep -Eo '[0-9]{1,2}' | perl -pe 's/(\d{1})(?=(?:\d{1}){1,5}\b)/\1./g' | sed 's/^/PHP /g')
#   fi
#   su_dung_repo_du_phong=1
# fi

# if [[ $(echo $x | grep -Eo '[0-9]{1,2}') = '' ]]; then
#   sed -i '/rpms.litespeedtech.com/d' /etc/hosts
#   _runloi "Tiến hành quét các phiên bản PHP"
#   . /etc/wptt/wptt-php-ini-main 1
# fi

echo -ne "                                                            " "\t" "\r"
echo ""

while IFS= read -r line; do selects+=("$line"); done <<<"$x"
PS3="
$(tput setab 0)-//- Bạn hãy lựa chọn phiên bản PHP bạn muốn sử dụng: (1-${#selects[@]}) [0=Thoát]:$(tput sgr0) "
select select in "${selects[@]}"; do
  php_version=$select
  break
done

php_version=${php_version//[-._]/}
php_version=$(echo $php_version | grep -Eo '[0-9]{1,2}' | sed 's/^/lsphp/g')

php_ver_chon=$(echo $php_version | grep -Eo '[0-9]{1,2}' | head -1)

if [[ "$php_version" = "" || "$php_version" = '0' ]]; then
  . /etc/wptt/wptt-php-ini-main 1
fi

php_ver_chon=$(echo $php_version | grep -Eo '[0-9]{1,2}' | head -1)

clear

# if [[ "$php_version" = "$php_version_check" ]]; then
#     echo "Hien tai server ban dang su dung phien ban php nay roi"
#     exit
# fi

if [[ "$php_version" = "0" || "$php_version" = "" ]]; then
  . /etc/wptt/wptt-php-ini-main 1
  exit
fi

# php_ver_chon=${php_version//[-._]/}

#chuyen doi vi du lsphp74 thì thành giá trị: 7.4

#https://make.wordpress.org/hosting/handbook/server-environment/
extensions=(common gd imagick process mbstring pdo mysqlnd xml opcache mcrypt imap bcmath intl zip mysql json curl pecl-igbinary igbinary)

_runing "Tiến hành quét thư viện lưu trữ"
if [[ $(dnf list available 2>/dev/null | grep "lsphp${php_ver_chon}") || $(apt list 2>/dev/null | grep "lsphp${php_ver_chon}") ]]; then #điều kiện PHP đang được hỗ trợ có sẵn trên repo
  _rundone "Tiến hành quét thư viện lưu trữ"
  yum install -y lsphp${php_ver_chon}
  for extension in ${extensions[@]}; do
    yum install -y lsphp${php_ver_chon}-$extension
  done
else
  _rundone "Tiến hành quét thư viện lưu trữ"
  #thực thi download install nhưng php đã hết hỗ trợ

  url_repo_litespeed=$(
    cat /tmp/php_extension_call_eol | grep lsphp${php_ver_chon} | grep -oP 'href="\K[^"]+' | grep -v 'debuginfo\|-devel\|-debugsource' | awk '
BEGIN { FS = "/" }
{
    filename = $NF
    split(filename, parts, "-")

    pkg_name = ""
    version = ""

    if (parts[2] == "pecl") {
        # TRƯỜNG HỢP 1: Gói PECL (ví dụ: lsphp74-pecl-redis-...)
        pkg_name = parts[1] "-" parts[2] "-" parts[3]
        version = parts[4]
    } else if (parts[2] ~ /^[0-9]+\.[0-9]+/) {
        # TRƯỜNG HỢP 2 (MỚI): Gói lsphp gốc (ví dụ: lsphp74-7.4.28-...)
        pkg_name = parts[1]
        version = parts[2]
    } else {
        # TRƯỜNG HỢP 3: Gói extension thông thường (ví dụ: lsphp74-pgsql-...)
        pkg_name = parts[1] "-" parts[2]
        version = parts[3]
    }

    # Logic so sánh phiên bản và lưu trữ vẫn như cũ
    if (version > versions[pkg_name]) {
        versions[pkg_name] = version
        latest_lines[pkg_name] = $0
    }
}
END {
    PROCINFO["sorted_in"] = "@ind_str_asc"
    for (pkg in latest_lines) {
        print latest_lines[pkg]
    }
}'
  )

  for extension in ${extensions[@]}; do
    if [[ $(printf "%s\n" "${url_repo_litespeed[@]}" | grep "lsphp${php_ver_chon}-${extension}-" | grep '\.rpm') ]]; then #kiểm tra extension đó có tồn tại không redhat
      dnf install http://rpms.litespeedtech.com$(printf "%s\n" "${url_repo_litespeed[@]}" | grep "lsphp${php_ver_chon}-${extension}-" | grep '\.rpm') -y
      # if [[ -z $(rpm -aq | grep "lsphp${php_ver_chon}-${extension}-") ]]; then #kiểm tra đã cài được chưa, nếu chưa cài được thì sẽ return cài lại extension chỗ đó
      #   sed -i '/rpms.litespeedtech.com/d' /etc/hosts
      #   echo $'\n52.55.120.73 rpms.litespeedtech.com\n' >>/etc/hosts
      #   dnf install http://rpms.litespeedtech.com$(printf "%s\n" "${url_repo_litespeed[@]}" | grep "lsphp${php_ver_chon}-${extension}-") -y
      #   su_dung_repo_du_phong=1
      # fi
    fi

    if [[ $(printf "%s\n" "${url_repo_litespeed[@]}" | grep "lsphp${php_ver_chon}-${extension}-" | grep '\.deb') ]]; then #kiểm tra extension đó có tồn tại không ubuntu
      TEMP_DIR_file=$(mktemp)
      wget -P $TEMP_DIR_file https://rpms.litespeedtech.com$(printf "%s\n" "${url_repo_litespeed[@]}" | grep "lsphp${php_ver_chon}-${extension}-" | grep '\.deb')
      apt install -y $TEMP_DIR_file/$(ls -A $TEMP_DIR_file | grep '.deb')
      rm -rf $TEMP_DIR_file
    fi
  done

  #lsphp'${php_ver_chon}'_\K[0-9]+\.[0-9]+ tương thích với Ubuntu
  #lsphp'${php_ver_chon}'-\K[0-9]+\.[0-9]+ tương thích với almalinux
  url_php_eol_install=$(printf "%s\n" "${url_repo_litespeed[@]}" | grep -P 'lsphp'${php_ver_chon}'-\K[0-9]+\.[0-9]+\|lsphp'${php_ver_chon}'_\K[0-9]+\.[0-9]+' | tail -n1) #lấy php main
  if [[ $(echo $url_php_eol_install | grep '\.rpm') ]]; then
    dnf install http://rpms.litespeedtech.com${url_php_eol_install} -y
  else
    #dành cho ubuntu file deb
    TEMP_DIR_file=$(mktemp)
    wget -P $TEMP_DIR_file https://rpms.litespeedtech.com${url_php_eol_install}
    apt install -y $TEMP_DIR_file/$(ls -A $TEMP_DIR_file | grep '.deb')
    rm -rf $TEMP_DIR_file
  fi

  # if [[ -z $(rpm -aq 2>/dev/null | grep -P 'lsphp'${php_ver_chon}'-\K[0-9]+\.[0-9]+') && -z $(dpkg -l 2>/dev/null | grep -P 'lsphp'${php_ver_chon}'') ]]; then #kiểm tra đã cài được chưa, nếu chưa cài được thì sẽ return cài lại extension chỗ đó
  #   sed -i '/rpms.litespeedtech.com/d' /etc/hosts
  #   echo $'\n52.55.120.73 rpms.litespeedtech.com\n' >>/etc/hosts
  #   su_dung_repo_du_phong=1
  #   dnf install http://rpms.litespeedtech.com${url_php_eol_install} -y
  # fi
  rm -f /tmp/php_extension_call_eol
fi

#fix lỗi hết data json version 7.4
if [[ $(which dnf) = '' ]]; then
  if [[ $php_ver_chon = '74' ]]; then
    rpm -ivh http://rpms.litespeedtech.com/centos/7/update/x86_64/RPMS/lsphp74-json-7.4.33-2.el7.x86_64.rpm
  fi
fi

if [[ $(which dnf) = '' ]]; then
  if [[ $php_ver_chon = '74' ]]; then
    check_json=$(/usr/local/lsws/lsphp74/bin/php -m | grep 'json')
    if [[ $check_json = '' ]]; then
      rpm -ivh http://rpms.litespeedtech.com/centos/7/update/x86_64/RPMS/lsphp74-json-7.4.33-2.el7.x86_64.rpm
    fi
  fi
fi

#redis rehat
redis_check=$(systemctl status redis.service 2>/dev/null | grep 'Active' | cut -f2 -d':' | xargs | cut -f1 -d' ' | xargs)
if [[ $redis_check = 'active' ]]; then
  if $(cat /etc/*release | grep -q "Ubuntu"); then
    yum install lsphp${php_ver_chon}-redis -y
  else
    if [[ $(dnf list available 2>/dev/null | grep "lsphp${php_ver_chon}") || $(apt list 2>/dev/null | grep "lsphp${php_ver_chon}") ]]; then #điều kiện PHP đang được hỗ trợ có sẵn trên repo
      yum install lsphp${php_ver_chon}-pecl-redis -y
    else
      extensions_redis=(pecl-igbinary
        pecl-redis)
      for extension in ${extensions_redis[@]}; do
        if [[ $(printf "%s\n" "${url_repo_litespeed[@]}" | grep "lsphp${php_ver_chon}-${extension}-") ]]; then #kiểm tra extension đó có tồn tại không
          dnf install http://rpms.litespeedtech.com$(printf "%s\n" "${url_repo_litespeed[@]}" | grep "lsphp${php_ver_chon}-${extension}-") -y
          if [[ -z $(rpm -aq | grep "lsphp${php_ver_chon}-${extension}-") ]]; then #kiểm tra đã cài được chưa, nếu chưa cài được thì sẽ return cài lại extension chỗ đó
            sed -i '/rpms.litespeedtech.com/d' /etc/hosts
            echo $'\n52.55.120.73 rpms.litespeedtech.com\n' >>/etc/hosts
            dnf install http://rpms.litespeedtech.com$(printf "%s\n" "${url_repo_litespeed[@]}" | grep "lsphp${php_ver_chon}-${extension}-") -y
            su_dung_repo_du_phong=1
          fi
        fi
      done

    fi
  fi
fi

memcache_check=$(systemctl status memcached.service 2>/dev/null | grep 'Active' | cut -f2 -d':' | xargs | cut -f1 -d' ' | xargs)
if [[ $memcache_check = 'active' ]]; then
  if $(cat /etc/*release | grep -q "Ubuntu"); then
    yum install lsphp${php_ver_chon}-memcached -y
  else
    if [[ $(dnf list available 2>/dev/null | grep "lsphp${php_ver_chon}") || $(apt list 2>/dev/null | grep "lsphp${php_ver_chon}") ]]; then #điều kiện PHP đang được hỗ trợ có sẵn trên repo
      yum install lsphp${php_ver_chon}-pecl-memcached -y --nogpgcheck --disablerepo="mariadb"
    else
      extensions_memcached=(pecl-igbinary
        pecl-msgpack
        pecl-memcached)
      for extension in ${extensions_memcached[@]}; do
        if [[ $(printf "%s\n" "${url_repo_litespeed[@]}" | grep "lsphp${php_ver_chon}-${extension}-") ]]; then #kiểm tra extension đó có tồn tại không
          dnf install http://rpms.litespeedtech.com$(printf "%s\n" "${url_repo_litespeed[@]}" | grep "lsphp${php_ver_chon}-${extension}-") -y
          if [[ -z $(rpm -aq | grep "lsphp${php_ver_chon}-${extension}-") ]]; then #kiểm tra đã cài được chưa, nếu chưa cài được thì sẽ return cài lại extension chỗ đó
            sed -i '/rpms.litespeedtech.com/d' /etc/hosts
            echo $'\n52.55.120.73 rpms.litespeedtech.com\n' >>/etc/hosts
            dnf install http://rpms.litespeedtech.com$(printf "%s\n" "${url_repo_litespeed[@]}" | grep "lsphp${php_ver_chon}-${extension}-") -y
            su_dung_repo_du_phong=1
          fi
        fi
      done
    fi
  fi
fi

phien_ban_php_co_cham=$(echo $php_ver_chon | grep -Eo '[0-9]{1,2}' | head -1 | perl -pe 's/(\d{1})(?=(?:\d{1}){1,5}\b)/\1./g')

if $(cat /etc/*release | grep -q "Ubuntu"); then
  duong_dan_php_ini="/usr/local/lsws/lsphp${php_ver_chon}/etc/php/$phien_ban_php_co_cham/litespeed/php.ini"
else
  duong_dan_php_ini="/usr/local/lsws/lsphp${php_ver_chon}/etc/php.ini"
fi

sed -i "/opcache.memory_consumption/d" $duong_dan_php_ini
sed -i "/opcache.interned_strings_buffer/d" $duong_dan_php_ini
sed -i "/opcache.max_accelerated_files/d" $duong_dan_php_ini
sed -i "/opcache.revalidate_freq/d" $duong_dan_php_ini
sed -i "/opcache.fast_shutdown/d" $duong_dan_php_ini
sed -i "/opcache.enable_cli/d" $duong_dan_php_ini
echo '
opcache.memory_consumption=128
opcache.interned_strings_buffer=8
opcache.max_accelerated_files=10000
opcache.revalidate_freq=100
opcache.fast_shutdown=1
opcache.enable_cli=1' >>$duong_dan_php_ini

. /etc/wptt/.wptt.conf
if [[ $wptangtoc_ols_giatuan = "1" ]]; then
  sed -i "/opcache.validate_timestamps/d" $duong_dan_php_ini
  sed -i "/opcache.file_update_protection/d" $duong_dan_php_ini
  echo '
	opcache.validate_timestamps=0
	opcache.file_update_protection=0' >>$duong_dan_php_ini
fi

sed -i "s/expose_php = On/expose_php = off/g" $duong_dan_php_ini
sed -i "s/upload_max_filesize = 2M/upload_max_filesize = 8M/g" $duong_dan_php_ini
sed -i "s/max_execution_time = 30/max_execution_time = 120/g" $duong_dan_php_ini

sed -i "/php_version_check/d" /etc/wptt/.wptt.conf

#chuyen tu vi du tu 82 thanh 8.2
php_version_number=$(echo $php_ver_chon | perl -pe 's/(\d{1})(?=(?:\d{1}){1,5}\b)/\1./g')

echo "php_version_check=$php_version_number" >>/etc/wptt/.wptt.conf

sed -E -i "s/lsphp[0-9]+/lsphp$php_ver_chon/g" /usr/local/lsws/conf/httpd_config.conf

if [ "$(ls -A /etc/wptt/vhost | grep -v '^\.\.conf$' | sort -uV)" ]; then
  echo
  echo "dang cap nhat chuyen doi version $php_version_number"
  echo '--------------------------------------------------'
  for entry in $(ls -A /etc/wptt/vhost | grep -v '^\.\.conf$' | sort -uV); do
    domain=$(echo $entry | sed 's/^.//' | sed 's/.conf//')
    path="/usr/local/lsws/$domain/html"
    i=1
    if [[ -d "$path" ]]; then
      sed -E -i "s/lsphp[0-9]+/lsphp$php_ver_chon/g" /usr/local/lsws/conf/vhosts/$domain/$domain.conf
      sed -E -i "s/ lsphp${php_ver_chon}/lsphp${php_ver_chon}/g" /usr/local/lsws/conf/vhosts/"$domain"/"$domain".conf
      sed -E -i "s/lsphp${php_ver_chon} /lsphp${php_ver_chon}/g" /usr/local/lsws/conf/vhosts/"$domain"/"$domain".conf

      sed -i '/phien_ban_php_domain/d' /etc/wptt/vhost/.$domain.conf
      echo "phien_ban_php_domain=$php_version_number" >>/etc/wptt/vhost/.$domain.conf
    fi
  done
  echo '--------------------------------------------------'
  echo
fi

/usr/local/lsws/bin/lswsctrl restart >/dev/null 2>&1

#biến môi trường
ln -sf /usr/local/lsws/lsphp${php_ver_chon}/bin/lsphp /usr/local/lsws/fcgi-bin/lsphp${php_ver_chon}
ln -sf /usr/local/lsws/lsphp${php_ver_chon}/bin/lsphp /usr/local/lsws/fcgi-bin/lsphp5
ln -sf /usr/local/lsws/lsphp${php_ver_chon}/bin/php /usr/bin/php

if [[ $su_dung_repo_du_phong = '1' ]]; then
  sed -i '/rpms.litespeedtech.com/d' /etc/hosts
fi

clear
echo "Hoàn tất việc chuyển PHP version $php_version"

check_menu_wptangtoc_active=$1
if [[ $check_menu_wptangtoc_active = "98" ]]; then
  . /etc/wptt/wptt-php-ini-main 1
fi

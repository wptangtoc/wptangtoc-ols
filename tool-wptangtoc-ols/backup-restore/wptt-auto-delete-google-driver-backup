  #!/bin/bash
NAME=$1
ngay=$2
checkactivate=$(grep -rnw '/root/.config/rclone/rclone.conf' -e "wptangtoc" >>/dev/null 2>&1 && echo 2)
if [[ "$checkactivate" = "2" ]]; then
  google=4
else
  echo "Bạn chưa kích hoạt rclone Drive"
  exit
fi

if [[ "$google" = "4" ]]; then
  if [[ $NAME = 'Tất cả website' ]]; then
    selects=()
    for entry in $(ls -A /etc/wptt/vhost | sort -uV); do
      NAME=$(echo $entry | sed 's/^.//' | sed 's/.conf//')       #all website
      if [ "$NAME" != "${NAME/./}" ] && [ "$NAME" != '.' ]; then #điều kiện domain phải có dấu . và lỗi chỉ có only .
        danh_sach_file_het_han=($(rclone ls wptangtoc:wptangtoc_ols_backup/$NAME --min-age ${ngay}d | awk '{print $2}' | grep '.zip\|.sql\|.sql.gz|\.tar.gz|\.tar.zst|.sql.zst'))
        for file in ${danh_sach_file_het_han[@]}; do
          if [[ $file ]]; then

            #--drive-use-trash=false	xoá trên google drive không cần phải vào thùng rác
            #--onedrive-hard-delete	là trên onedriver Business hoặc SharePoint, còn Personal thì không có
            if [[ $(cat ~/.config/rclone/rclone.conf | grep 'onedrive') ]]; then
              if [[ $(cat ~/.config/rclone/rclone.conf | grep 'drive_type' | grep 'personal') ]]; then #Personal onedrive
                rclone -v delete wptangtoc:wptangtoc_ols_backup/$NAME/$file
              else
                rclone -v --onedrive-hard-delete delete wptangtoc:wptangtoc_ols_backup/$NAME/$file #onedriver Business hoặc SharePoint
              fi
            else #google drive
              rclone -v --drive-use-trash=false delete wptangtoc:wptangtoc_ols_backup/$NAME/$file
            fi

          fi
        done
      fi
    done
    exit
  fi

  danh_sach_file_het_han=($(rclone ls wptangtoc:wptangtoc_ols_backup/$NAME --min-age ${ngay}d | awk '{print $2}' | grep '.zip\|.sql\|.sql.gz|\.tar.gz|\.tar.zst|.sql.zst')) #onyly website
  for file in ${danh_sach_file_het_han[@]}; do
    if [[ $file ]]; then
      if [[ $(cat ~/.config/rclone/rclone.conf | grep 'onedrive') ]]; then
        if [[ $(cat ~/.config/rclone/rclone.conf | grep 'drive_type' | grep 'personal') ]]; then #Personal onedrive
          rclone -v delete wptangtoc:wptangtoc_ols_backup/$NAME/$file
        else
          rclone -v --onedrive-hard-delete delete wptangtoc:wptangtoc_ols_backup/$NAME/$file #onedriver Business hoặc SharePoint
        fi
      else #google drive
        rclone -v --drive-use-trash=false delete wptangtoc:wptangtoc_ols_backup/$NAME/$file
      fi
    fi
  done
fi
